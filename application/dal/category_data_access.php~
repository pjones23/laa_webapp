	function readAll() {
		$categories = array();
		$this->load->database();
		$query = $this->db->get('Category');
		foreach ($query->result() as $row)
		{
			echo $row->title;
			array_push($categories, array('ID' => $row->ID, 'parentCategoryID' => $row->parentCategoryID, 'name' => $row->name, 'description' => $row->description));
		}
		$this->db->close();
		return $categories;
	}
	
